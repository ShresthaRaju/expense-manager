<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:elevation="15dp"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_trans_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Income"

                ></TextView>

            <TextView
                android:id="@+id/tv_trans_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="15dp"
                android:text="09/10"
                android:textAlignment="textEnd"

                ></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_trans_date"
              />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_trans_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/cardview1"
                android:layout_margin="10dp"
                android:src="@drawable/ic_money" />

            <TextView
                android:id="@+id/tv_trans_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_trans_date"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/iv_trans_icon"
                android:text="Salary"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_trans_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_trans_date"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv_trans_category"
                android:text="RS 1000"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imagebutton1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/tv_trans_date"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv_trans_amount"
                android:src="@drawable/ic_note" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/tv_trans_date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/imagebutton1"
                android:src="@drawable/ic_delete" />

            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
